<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Widget">
        <attr name="widget_entry_button" format="reference" />
    </declare-styleable>


    <declare-styleable name="EntryButton">
        <attr name="title" format="string" />
        <attr name="background_color" format="reference" />
        <attr name="title_text_appearance" format="reference" />
        <attr name="description_text_appearance" format="reference" />
        <attr name="icon_tint" format="reference|color" />
        <attr name="android:description" format="string" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="bar_title" format="string" />
        <attr name="right_text" format="string" />
        <attr name="right_text_color" format="color" />
        <attr name="left_text_color" format="color" />
        <attr name="left_text" format="string" />
        <attr name="show_back_icon" format="boolean" />
        <attr name="right_icon" format="reference" />
        <attr name="show_middle" format="boolean" />
    </declare-styleable>
    <declare-styleable name="HeadComponent">
        <attr name="head_left_text" format="string" />
        <attr name="head_title_text" format="string" />
        <attr name="head_right_text" format="string" />
        <attr name="head_left_text_drawable" format="reference" />
        <attr name="head_title_text_drawable" format="reference" />
        <attr name="head_right_text_drawable" format="reference" />
        <attr name="head_right_text_color_default" format="color" />
        <attr name="head_right_text_color_disable" format="color" />
    </declare-styleable>

    <declare-styleable name="SearchComponent">
        <attr name="search_component_clickable" format="boolean" />
    </declare-styleable>
</resources>
